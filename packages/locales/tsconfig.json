{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "outDir": "./build",
    "baseUrl": "src",
    "rootDir": "./src",
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "composite": true,
    "resolveJsonModule": true
  },
  "include": ["src", "./src/**/*.json"],
  "exclude": ["build"]
}
