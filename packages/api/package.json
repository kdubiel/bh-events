{
  "version": "0.2.0",
  "name": "@project/api",
  "private": true,
  "sideEffects": false,
  "scripts": {
    "start": "node ./build/bundle.js",
    "build": "webpack --config config/webpack.config.prod",
    "watch": "npm-run-all --parallel watch:webpack watch:nodemon",
    "watch:webpack": "webpack --config config/webpack.config.dev --watch",
    "watch:nodemon": "nodemon --config config/nodemon.json",
    "test": "jest --config=./config/jest.config.js",
    "test:watch": "yarn test --watch --onlyChanged --verbose",
    "test:coverage": "yarn test --coverage --verbose=false"
  },
  "dependencies": {
    "@project/locales": "*",
    "@project/types": "*",
    "@project/validators": "*",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^4.1.0",
    "i18next": "^19.7.0",
    "lodash": "^4.17.20",
    "mongoose": "^5.10.0",
    "saslprep": "^1.0.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/helmet": "^0.0.47",
    "@types/jest": "^26.0.10",
    "@types/lodash": "^4.14.159",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "@types/supertest": "^2.0.10",
    "dotenv-webpack": "^2.0.0",
    "jest": "^24.9.0",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "supertest": "^4.0.2",
    "ts-jest": "^26.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-node-externals": "^2.5.1"
  }
}
